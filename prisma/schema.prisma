generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String           @id @default(cuid())
  name      String
  nip       String?          @unique
  type      OrganizationType @default(CLIENT)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  contract  Contract?
  orders    Order[]
  positions Position[]
  users     User[]
}

model User {
  id                   String        @id @default(cuid())
  email                String        @unique
  name                 String?
  passwordHash         String?
  role                 UserRole      @default(PROSPECT)
  isActive             Boolean       @default(false)
  emailVerified        DateTime?
  termsVersionAccepted Int?
  lastTermsAcceptance  DateTime?
  organizationId       String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  accounts             Account[]
  auditLogs            AuditLog[]
  ordersCreated        Order[]       @relation("CreatedOrders")
  sessions             Session[]
  organization         Organization? @relation(fields: [organizationId], references: [id])
}

model Contract {
  id              String       @id @default(cuid())
  organizationId  String       @unique
  allowShort      Boolean      @default(false)
  maxMWPerOrder   Float?
  contractNumber  String?
  validFrom       DateTime?
  validTo         DateTime?
  isActive        Boolean      @default(true)
  allowedProducts String[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  organization    Organization @relation(fields: [organizationId], references: [id])
}

model Product {
  id            String         @id @default(cuid())
  symbol        String         @unique
  profile       ProductProfile
  period        ProductPeriod
  deliveryStart DateTime
  deliveryEnd   DateTime
  orders        Order[]
  positions     Position[]
  quotes        Quote[]
}

model Quote {
  id        String   @id @default(cuid())
  productId String?
  symbol    String
  market    String
  price     Float
  currency  String   @default("PLN")
  timestamp DateTime
  createdAt DateTime @default(now())
  product   Product? @relation(fields: [productId], references: [id])

  @@index([symbol, timestamp])
}

model Order {
  id               String       @id @default(cuid())
  organizationId   String
  userId           String
  productId        String
  side             OrderSide
  quantityMW       Float
  quantityPercent  Float?
  limitPrice       Float
  validUntil       DateTime
  status           OrderStatus  @default(DRAFT)
  filledMW         Float        @default(0)
  averageFillPrice Float?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  fills            Fill[]
  organization     Organization @relation(fields: [organizationId], references: [id])
  product          Product      @relation(fields: [productId], references: [id])
  createdByUser    User         @relation("CreatedOrders", fields: [userId], references: [id])
}

model Fill {
  id               String   @id @default(cuid())
  orderId          String
  executedMW       Float
  price            Float
  executedAt       DateTime @default(now())
  executedByUserId String?
  order            Order    @relation(fields: [orderId], references: [id])
}

model Position {
  id             String       @id @default(cuid())
  organizationId String
  productId      String
  netQuantityMW  Float        @default(0)
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  product        Product      @relation(fields: [productId], references: [id])

  @@unique([organizationId, productId])
}

model NewsItem {
  id          String   @id @default(cuid())
  title       String
  summary     String
  url         String
  source      String
  publishedAt DateTime
  tags        String[]
  createdAt   DateTime @default(now())
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String?
  details   Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model EnergyPrice {
  id        String   @id @default(cuid())
  date      String
  hour      Int
  price     Float
  volume    Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, hour])
  @@index([date])
}

model FuturesQuote {
  id           String   @id @default(cuid())
  contract     String
  price        Float
  maxPrice     Float?
  minPrice     Float?
  volume       Float    @default(0)
  openInterest Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  date         DateTime

  @@unique([date, contract])
  @@index([contract])
  @@index([date])
}

enum UserRole {
  ADMIN
  BACKOFFICE
  TRADER
  RISK
  CLIENT_ADMIN
  CLIENT_TRADER
  CLIENT_VIEWER
  PROSPECT
}

enum OrganizationType {
  INTERNAL
  CLIENT
}

enum ProductProfile {
  BASE
  PEAK
}

enum ProductPeriod {
  MONTH
  QUARTER
  YEAR
}

enum OrderSide {
  BUY
  SELL
}

enum OrderStatus {
  DRAFT
  SUBMITTED
  NEEDS_APPROVAL
  APPROVED
  IN_EXECUTION
  PARTIALLY_FILLED
  FILLED
  EXPIRED
  CANCELLED
  REJECTED
}
