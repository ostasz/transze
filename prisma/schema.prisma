generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Organization {
  id        String           @id @default(cuid())
  name      String
  nip       String?          @unique
  type      OrganizationType @default(CLIENT)
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt
  contracts Contract[]
  orders    Order[]
  positions Position[]
  users     User[]
}

model User {
  id                   String        @id @default(cuid())
  email                String        @unique
  name                 String?
  passwordHash         String?
  role                 UserRole      @default(PROSPECT)
  isActive             Boolean       @default(false)
  emailVerified        DateTime?
  termsVersionAccepted Int?
  lastTermsAcceptance  DateTime?
  organizationId       String?
  createdAt            DateTime      @default(now())
  updatedAt            DateTime      @updatedAt
  accounts             Account[]
  auditLogs            AuditLog[]
  ordersCreated        Order[]       @relation("CreatedOrders")
  sessions             Session[]
  organization         Organization? @relation(fields: [organizationId], references: [id])
  newsBookmarks        NewsBookmark[]
}

model Contract {
  id              String       @id @default(cuid())
  organizationId  String
  allowShort      Boolean      @default(false)
  maxMWPerOrder   Float?
  yearlyLimits    Json?
  contractNumber  String?
  validFrom       DateTime?
  validTo         DateTime?
  isActive        Boolean      @default(true)
  allowedProducts String[]
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  organization    Organization @relation(fields: [organizationId], references: [id])
}

model Product {
  id            String         @id @default(cuid())
  symbol        String         @unique
  profile       ProductProfile
  period        ProductPeriod
  deliveryStart DateTime
  deliveryEnd   DateTime
  orders        Order[]
  positions     Position[]
  quotes        Quote[]
}

model Quote {
  id        String   @id @default(cuid())
  productId String?
  symbol    String
  market    String
  price     Float
  currency  String   @default("PLN")
  timestamp DateTime
  createdAt DateTime @default(now())
  product   Product? @relation(fields: [productId], references: [id])

  @@index([symbol, timestamp])
}

model Order {
  id               String       @id @default(cuid())
  organizationId   String
  userId           String
  productId        String
  side             OrderSide
  quantityMW       Float
  quantityPercent  Float?
  limitPrice       Float
  validUntil       DateTime
  status           OrderStatus  @default(DRAFT)
  filledMW         Float        @default(0)
  averageFillPrice Float?
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  fills            Fill[]
  organization     Organization @relation(fields: [organizationId], references: [id])
  product          Product      @relation(fields: [productId], references: [id])
  createdByUser    User         @relation("CreatedOrders", fields: [userId], references: [id])
}

model Fill {
  id               String   @id @default(cuid())
  orderId          String
  executedMW       Float
  price            Float
  executedAt       DateTime @default(now())
  executedByUserId String?
  order            Order    @relation(fields: [orderId], references: [id])
}

model Position {
  id             String       @id @default(cuid())
  organizationId String
  productId      String
  netQuantityMW  Float        @default(0)
  updatedAt      DateTime     @updatedAt
  organization   Organization @relation(fields: [organizationId], references: [id])
  product        Product      @relation(fields: [productId], references: [id])

  @@unique([organizationId, productId])
}

// --- NEWS MODULE START ---

model NewsSource {
  id             String    @id @default(cuid())
  name           String
  type           NewsSourceType @default(RSS)
  homepageUrl    String
  feedUrl        String    @unique // To enforce uniqueness of sources
  language       String    @default("pl")
  country        String    @default("PL")
  isActive       Boolean   @default(true)
  allowImages    Boolean   @default(false)
  trustLevel     Int       @default(50) // 0-100
  priority       Int       @default(0) // Higher = more important for scoring
  
  // Status tracking
  lastFetchedAt    DateTime?
  lastFetchStatus  String? // OK, ERROR
  lastFetchError   String? // Truncated error message
  etag             String?
  lastModified     String?
  fetchIntervalMinutes Int? // Null = use global default
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  items          NewsItem[]
}

model NewsItem {
  id             String    @id @default(cuid())
  sourceId       String
  title          String
  url            String
  canonicalUrl   String
  urlHash        String    @unique // SHA256(canonicalUrl) for dedup
  
  publishedAt    DateTime? // From feed
  fetchedAt      DateTime  @default(now())
  
  excerpt        String?   @db.VarChar(240) // Short plain text summary
  excerptSource  String?   // "DESCRIPTION" | "CONTENT" | "meta"
  
  importance     Int       @default(0) // 0-100
  baseScore      Int       @default(0) // Debug info
  
  isPinned       Boolean   @default(false)
  isHidden       Boolean   @default(false)
  
  duplicateOfId  String?
  duplicateOf    NewsItem? @relation("NewsDuplicates", fields: [duplicateOfId], references: [id])
  duplicates     NewsItem[] @relation("NewsDuplicates")
  
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  
  source         NewsSource @relation(fields: [sourceId], references: [id], onDelete: Cascade)
  tags           NewsTagOnItem[]
  bookmarks      NewsBookmark[]

  @@index([publishedAt])
  @@index([importance(sort: Desc)])
  @@index([sourceId])
}

model NewsTag {
  id        String          @id @default(cuid())
  name      String          @unique
  slug      String          @unique
  items     NewsTagOnItem[]
}

model NewsTagOnItem {
  itemId    String
  tagId     String
  item      NewsItem @relation(fields: [itemId], references: [id], onDelete: Cascade)
  tag       NewsTag  @relation(fields: [tagId], references: [id], onDelete: Cascade)
  
  @@id([itemId, tagId])
}

model NewsBookmark {
  id        String   @id @default(cuid())
  userId    String
  itemId    String
  createdAt DateTime @default(now())
  
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  item      NewsItem @relation(fields: [itemId], references: [id], onDelete: Cascade)

  @@unique([userId, itemId])
}

model NewsIngestSchedule {
  id                    String   @id @default(cuid())
  isEnabled             Boolean  @default(true)
  timezone              String   @default("Europe/Warsaw")
  mode                  ScheduleMode @default(FIXED_TIMES)
  
  // For FIXED_TIMES: minutes from midnight (e.g. 870 = 14:30)
  fixedTimesMinutes     Int[]
  
  // For INTERVAL
  intervalMinutes       Int?
  
  jitterMinutes         Int      @default(2)
  minGapMinutes         Int      @default(30)
  
  lastRunAt             DateTime?
  nextDueAt             DateTime?
  
  updatedAt             DateTime @updatedAt
}

model NewsIngestRun {
  id             String   @id @default(cuid())
  startedAt      DateTime @default(now())
  finishedAt     DateTime?
  status         String   // RUNNING, OK, ERROR, SKIPPED
  reason         String?  // Why skipped or what happened
  
  itemsProcessed Int      @default(0)
  sourcesFetched Int      @default(0)
  errorMessage   String?
  
  createdAt      DateTime @default(now())
}

enum NewsSourceType {
  RSS
  API
  MANUAL
}

enum ScheduleMode {
  FIXED_TIMES
  INTERVAL
}

// --- NEWS MODULE END ---

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?
  action    String
  resource  String?
  details   Json?
  ipAddress String?
  userAgent String?
  timestamp DateTime @default(now())
  user      User?    @relation(fields: [userId], references: [id])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model EnergyPrice {
  id        String   @id @default(cuid())
  date      String
  hour      Int
  price     Float
  volume    Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([date, hour])
  @@index([date])
}

model FuturesQuote {
  id           String   @id @default(cuid())
  contract     String
  price        Float
  maxPrice     Float?
  minPrice     Float?
  volume       Float    @default(0)
  openInterest Float    @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  date         DateTime

  @@unique([date, contract])
  @@index([contract])
  @@index([date])
}

enum UserRole {
  ADMIN
  BACKOFFICE
  TRADER
  RISK
  CLIENT_ADMIN
  CLIENT_TRADER
  CLIENT_VIEWER
  PROSPECT
}

enum OrganizationType {
  INTERNAL
  CLIENT
}

enum ProductProfile {
  BASE
  PEAK
}

enum ProductPeriod {
  MONTH
  QUARTER
  YEAR
}

enum OrderSide {
  BUY
  SELL
}

enum OrderStatus {
  DRAFT
  SUBMITTED
  NEEDS_APPROVAL
  APPROVED
  IN_EXECUTION
  PARTIALLY_FILLED
  FILLED
  EXPIRED
  CANCELLED
  REJECTED
}
